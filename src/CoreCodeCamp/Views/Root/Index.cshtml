@model IEnumerable<Sponsor>
@{
  ViewData["Title"] = "Welcome";
}
@section topSection {
  <div class="col-sm-8 col-sm-offset-2 text">
    <h1 class="wow fadeInLeftBig"><strong>@this.GetEventInfo().Name</strong> is coming @this.GetEventInfo().EventDate.ToString("D")</h1>
    <div class="description wow fadeInLeftBig">
      <p class="lead">
        The @this.GetEventInfo().Name is your opportunity to join your other Atlanta developer and design community members in a day of training.
      </p>
      <a asp-controller="Root" asp-action="Register" asp-route-moniker="@this.GetEventInfo().Moniker" class="btn btn-lg btn-success disabled">Coming Soon</a>
    </div>
  </div>

}
<div class="row">
  <div class="col-sm-12 features section-description wow fadeIn">
    <h2>Why Attend the Code Camp?</h2>
    <div class="divider-1 wow fadeInUp"><span></span></div>
  </div>
</div>
<div class="row">
  <div class="col-sm-4 features-box wow fadeInUp">
    <div class="features-box-icon"><i class="fa fa-group"></i></div>
    <h3>Learn From The Best</h3>
    <p>Come hear from the best national and local speakers, including Microsoft MVPs, RDs, and open source advocates!</p>
  </div>
  <div class="col-sm-4 features-box wow fadeInDown">
    <div class="features-box-icon"><i class="fa fa-bolt"></i></div>
    <h3>Improve Your Skillset</h3>
    <p>Become a better developer by learning from our six tracks of talks.</p>
  </div>
  <div class="col-sm-4 features-box wow fadeInUp">
    <div class="features-box-icon"><i class="fa fa-cloud"></i></div>
    <h3>Network</h3>
    <p>With developers, designers, and companies all attending, it is your chance to meet the best people in the community all at once.</p>
  </div>
</div>
<div class="row">
  <div class="col-sm-4 features-box wow fadeInUp">
    <div class="features-box-icon"><i class="fa fa-laptop"></i></div>
    <h3>Jobs</h3>
    <p>Some of the best local companies come to this event looking to fill their most important roles. </p>
  </div>
  <div class="col-sm-4 features-box wow fadeInDown">
    <div class="features-box-icon"><i class="fa fa-code"></i></div>
    <h3>Hacking Lab</h3>
    <p>For the first time this year, we'll have an open space for hacking code with other developers and speakers.</p>
  </div>
  <div class="col-sm-4 features-box wow fadeInUp">
    <div class="features-box-icon"><i class="fa fa-tag"></i></div>
    <h3>Prizes</h3>
    <p>Like our past ten code camps, we'll have great prizes for our 'end of event' spectacular.</p>
  </div>
</div>
@section moreSections {
  <div class="more-features-2-container section-container section-container-gray-bg">
    <div class="container">
      <div class="row">
        @foreach (var s in Model.Where(s => s.Paid))
        {
          <div class="col-md-4 sponsor-box  wow fadeInLeft">
            <div class="sponsor-box-logo"><a href="@s.Link" target="_blank"><img src="@s.ImageUrl" alt="@s.Name" class="thumbnail" /></a></div>
            <div class="sponsor-box-level">@s.SponsorLevel Sponsor</div>
          </div>
        }
      </div>
      <div class="row">
        <h3>Want to Sponsor the <strong>@this.GetEventInfo().Name</strong>?</h3>
        <p class="lead">Interested in helping us bring this event to the Atlanta Metro Area? Become a sponsor today:</p>
        <a asp-controller="Root" asp-action="Sponsoring" asp-route-moniker="@this.GetEventInfo().Moniker" class="btn btn-lg btn-success">Become a Sponsor</a>
      </div>
    </div>
  </div>
}
