@model SpeakerViewModel
@{
  ViewData["Title"] = $"{Model.Name}";
}
<div class="row">
  <div class="col-sm-12 features section-description wow fadeIn">
    <h1>@Model.Name</h1>
    <div class="divider-1 wow fadeInUp"><span></span></div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-responsive img-circle pull-right" />
    <p>@Model.Bio</p>
  </div>
</div>
<div class="row">
  <h3>Sessions</h3>
  @foreach (var talk in Model.Talks)
  {
    @Html.Partial("_Session", Tuple.Create(talk, true))
  }
</div>
