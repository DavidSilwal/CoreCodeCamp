{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./wwwroot",
    "outFile": "./wwwroot/lib/app/app.js"
  },
  "include": [
    "./wwwroot/app/**/*.ts"
  ],
  "compileOnSave": true
}